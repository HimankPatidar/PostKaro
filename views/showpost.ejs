
<% layout('layouts/boilerplate.ejs') %>

<style>
    *{
        text-decoration: none;
    }
    .card-container {
        width: 650px; 
        margin: 1rem auto; 
    }

    .card-container img {
        width: 100%; 
        height: 400px;
    }
</style>

<h1>ALL POST</h1>
<div>
    <a href="/posts/new">Add Posts</a>
</div>
<% for (let post of result) { %>
    <div class="card-container">
        <div class="card mb-6">
            <div class="row">
                <div class="col-mg-8">
                    <div class="card-body">
                        <a class="card-title" href="/posts/<%=post._id%>"><%=post.title%></a>

                        <p class="card-text">
                            <small class="text-muted"><%=post.location%></small>
                        </p>
                        <div class="col md-4">
                            <% post.image.forEach(function(image) { %>
                                <img src="<%=image.url%>" alt="Post Images" class="card-img-top" alt="...">
                            <% }) %>
                        </div>
                        <i onclick="myFunction(this)" class="fa fa-thumbs-up"></i>
                        <script>
                            function myFunction(x) {
                                x.classList.toggle("fa-thumbs-down");
                            }
                        </script>
                        <p class="card-text"><%=post.description%></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %> 
