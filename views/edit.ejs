 <% layout('layouts/boilerplate.ejs')%>
<div class="row">
    <h1 class="text-center">Edit Post</h1>
    <div class="col-6 offset-3">
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="post[title]" value="<%=post.title%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="post[location]" value="<%=post.location%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Upload</label>
                <input class="form-control" type="file" id="image" name="image" accept="image/*" multiple required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="post[description]" required><%=post.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Post</button>
            </div>
        </form>
        <a href="/posts/<%= post._id %>">Back to Post</a>
    </div>
</div>
